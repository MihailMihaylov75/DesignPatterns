[MASTER]
# Allow loading of C extensions
extension-pkg-whitelist=

# Files/directories to ignore
ignore=__pycache__,.venv,build,dist
ignore-patterns=^test_.*\.py$

# Use multiple processes to speed up
jobs=1

[MESSAGES CONTROL]
# Disable some checks
disable=
    missing-module-docstring,
    missing-class-docstring,
    missing-function-docstring,
    too-few-public-methods,
    invalid-name,
    duplicate-code

[FORMAT]
max-line-length=100
indent-string='    '

[DESIGN]
max-args=5
max-attributes=10
max-branches=12
max-locals=15
max-returns=6
max-statements=50

[TYPECHECK]
ignored-modules=

[REPORTS]
output-format=colorized
reports=no
score=yes

[SIMILARITIES]
min-similarity-lines=6

[LOGGING]
logging-modules=logging

[MISCELLANEOUS]
notes=FIXME,XXX,TODO
